{% block custom_head %}
<!--link rel="stylesheet"
    href="http://10.134.104.40/django_statics/AdminLTE/bower_components/select2/dist/css/select2.min.css"-->
<link rel="stylesheet"
  href="http://10.134.104.40/django_statics/AdminLTE/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
<link rel="stylesheet"
  href="http://10.134.104.40/django_statics/AdminLTE/bower_components/Ionicons/css/ionicons.min.css">
{% endblock custom_head %}

{% block custom_script %}
<script src="http://10.134.104.40/django_statics/AdminLTE/bower_components/datatables.net/js/jquery.dataTables.min.js">
</script>
<script
  src="http://10.134.104.40/django_statics/AdminLTE/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js">
</script>
<script src="http://10.134.104.40/django_statics/AdminLTE/bower_components/jquery-slimscroll/jquery.slimscroll.min.js">
</script>
<script>
  $(document).ready(function () {
    $('#mission_list').DataTable({
      'serverSide': true,
      'paging': true,
      'lengthChange': false,
      'searching': false,
      'ordering': true,
      'info': true,
      'autoWidth': false,
      "language": {
        "sLengthMenu": "每页显示 _MENU_ 项结果",
        "info": "第 _START_ 至 _END_ 项记录，共 _TOTAL_ 项",
        "infoEmpty": "第 0 至 0 项记录，共 0 项",
        "emptyTable": "无可用数据",
        "infoFiltered": "(从_MAX_条记录中过滤)",
        "paginate": {
          "last": "第一页",
          "next": "下一页",
          "previous": "上一页",
          "last": "最后一页",
        }
      },
      'order': [
        [0, "asc"]
      ],
      "bLengthChange": true,
      "pageLength": 10,
      "lengthMenu": [10, 15, 20],
      "ajax": {
        "url": "{% url 'vr_query:page' %}",
        "type": "POST",
        cache: false, //禁用缓存
        data: function (data) {
          return JSON.stringify({
            'draw': data.draw,
            'start': data.start,
            'length': data.length,
          })
        }, //传入已封装的参数
        dataType: "json", //返回数据格式为json
        contentType: "application/json"
        // "data": function ( d ) {
        //     console.log(d)
        // }
      },
      "columns": [{
          "data": "mission_id",
          "width": "5%",
          "defaultContent": "--"
        },
        {
          "data": "mission_type",
          "width": "10%",
          "defaultContent": "--"
        },
        {
          "data": "query_from",
          "width": "7%",
          "defaultContent": "--"
        },
        {
          "data": "user",
          "width": "10%",
          "defaultContent": "--"
        },
        {
          "data": "status",
          "width": "10%",
          "defaultContent": "--"
        },
        {
          "data": "start_time",
          "width": "14%",
          "defaultContent": "--"
        },
        {
          "data": "end_time",
          "width": "14%",
          "defaultContent": "--"
        },
        {
          "data": "result_url",
          "width": "15%",
          "defaultContent": "--"
        },
      ]
    });
  });
</script>
{% endblock custom_script %}

<!-- Content Header -->
{% block content_head %}
<section class="content-header">
  <h1>
    欢迎来到质保平台
    <small>welcome</small>
  </h1>
